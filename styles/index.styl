@import "vars.styl"

html, body
  background $color-default-background
  color $color-default-text
  margin 0
  padding 0
  width 100%
  height 100%
  font-family sans-serif

h1, h2, h3, h4, h5, h6
  font-family "Orbitron", sans-serif

.content
  width 100%

.input-group
  width 100%

button
  background $color-pri
  color $color-default-text
  border 0
  font-family "Orbitron", sans-serif
  padding 16px 32px
